<Page
    x:Class="CalmCadence.App.Views.RoutineDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:CalmCadence.App.ViewModels"
    xmlns:controls="using:CalmCadence.App.Controls"
    mc:Ignorable="d">

    <Page.Resources>
        <controls:RoutineStepTemplateSelector x:Key="StepTemplateSelector">
            <controls:RoutineStepTemplateSelector.ReviewAgendaTemplate>
                <DataTemplate>
                    <Border
                        CornerRadius="6"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        Margin="0,4,0,4"
                        Padding="16">
                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Spacing="12">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Step" FontSize="16" FontWeight="SemiBold" />
                                    <ComboBox
                                        ItemsSource="{Binding DataContext.AvailableStepTypes, RelativeSource={RelativeSource AncestorType=Page}}"
                                        SelectedItem="{Binding StepType, Mode=TwoWay}"
                                        Width="180" />
                                </StackPanel>
                                <TextBox
                                    Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="Enter step description"
                                    TextWrapping="Wrap" />
                                <TextBlock Text="Review today's agenda and upcoming tasks" FontStyle="Italic" Opacity="0.7" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Vertical" Spacing="4" VerticalAlignment="Top">
                                <Button Content="â¬†ï¸" FontSize="12" Padding="8" Command="{Binding DataContext.MoveStepUpCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" />
                                <Button Content="â¬‡ï¸" FontSize="12" Padding="8" Command="{Binding DataContext.MoveStepDownCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" />
                                <Button Content="ðŸ—‘ï¸" FontSize="12" Padding="8" Command="{Binding DataContext.RemoveStepCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </controls:RoutineStepTemplateSelector.ReviewAgendaTemplate>

            <controls:RoutineStepTemplateSelector.MarkHabitCompleteTemplate>
                <DataTemplate>
                    <Border
                        CornerRadius="6"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        Margin="0,4,0,4"
                        Padding="16">
                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Spacing="12">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Step" FontSize="16" FontWeight="SemiBold" />
                                    <ComboBox
                                        ItemsSource="{Binding DataContext.AvailableStepTypes, RelativeSource={RelativeSource AncestorType=Page}}"
                                        SelectedItem="{Binding StepType, Mode=TwoWay}"
                                        Width="180" />
                                </StackPanel>
                                <TextBox
                                    Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="Enter step description"
                                    TextWrapping="Wrap" />
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Habit ID" FontWeight="SemiBold" />
                                    <TextBox
                                        Text="{Binding ConfigJson, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="Enter habit ID (GUID)" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Vertical" Spacing="4" VerticalAlignment="Top">
                                <Button Content="â¬†ï¸" FontSize="12" Padding="8" Command="{Binding DataContext.MoveStepUpCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" />
                                <Button Content="â¬‡ï¸" FontSize="12" Padding="8" Command="{Binding DataContext.MoveStepDownCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" />
                                <Button Content="ðŸ—‘ï¸" FontSize="12" Padding="8" Command="{Binding DataContext.RemoveStepCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </controls:RoutineStepTemplateSelector.MarkHabitCompleteTemplate>

            <controls:RoutineStepTemplateSelector.ShowNotificationTemplate>
                <DataTemplate>
                    <Border
                        CornerRadius="6"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        Margin="0,4,0,4"
                        Padding="16">
                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Spacing="12">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Step" FontSize="16" FontWeight="SemiBold" />
                                    <ComboBox
                                        ItemsSource="{Binding DataContext.AvailableStepTypes, RelativeSource={RelativeSource AncestorType=Page}}"
                                        SelectedItem="{Binding StepType, Mode=TwoWay}"
                                        Width="180" />
                                </StackPanel>
                                <TextBox
                                    Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="Enter step description"
                                    TextWrapping="Wrap" />
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Notification Message" FontWeight="SemiBold" />
                                    <TextBox
                                        Text="{Binding ConfigJson, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="Enter notification message"
                                        TextWrapping="Wrap"
                                        Height="60" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Vertical" Spacing="4" VerticalAlignment="Top">
                                <Button Content="â¬†ï¸" FontSize="12" Padding="8" Command="{Binding DataContext.MoveStepUpCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" />
                                <Button Content="â¬‡ï¸" FontSize="12" Padding="8" Command="{Binding DataContext.MoveStepDownCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" />
                                <Button Content="ðŸ—‘ï¸" FontSize="12" Padding="8" Command="{Binding DataContext.RemoveStepCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </controls:RoutineStepTemplateSelector.ShowNotificationTemplate>

            <controls:RoutineStepTemplateSelector.StartTimerTemplate>
                <DataTemplate>
                    <Border
                        CornerRadius="6"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        Margin="0,4,0,4"
                        Padding="16">
                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Spacing="12">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Step" FontSize="16" FontWeight="SemiBold" />
                                    <ComboBox
                                        ItemsSource="{Binding DataContext.AvailableStepTypes, RelativeSource={RelativeSource AncestorType=Page}}"
                                        SelectedItem="{Binding StepType, Mode=TwoWay}"
                                        Width="180" />
                                </StackPanel>
                                <TextBox
                                    Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="Enter step description"
                                    TextWrapping="Wrap" />
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Duration (minutes)" FontWeight="SemiBold" />
                                    <TextBox
                                        Text="{Binding ConfigJson, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="Enter duration in minutes" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Vertical" Spacing="4" VerticalAlignment="Top">
                                <Button Content="â¬†ï¸" FontSize="12" Padding="8" Command="{Binding DataContext.MoveStepUpCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" />
                                <Button Content="â¬‡ï¸" FontSize="12" Padding="8" Command="{Binding DataContext.MoveStepDownCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" />
                                <Button Content="ðŸ—‘ï¸" FontSize="12" Padding="8" Command="{Binding DataContext.RemoveStepCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </controls:RoutineStepTemplateSelector.StartTimerTemplate>

            <controls:RoutineStepTemplateSelector.DefaultTemplate>
                <DataTemplate>
                    <Border
                        CornerRadius="6"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        Margin="0,4,0,4"
                        Padding="16">
                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Spacing="12">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Step" FontSize="16" FontWeight="SemiBold" />
                                    <ComboBox
                                        ItemsSource="{Binding DataContext.AvailableStepTypes, RelativeSource={RelativeSource AncestorType=Page}}"
                                        SelectedItem="{Binding StepType, Mode=TwoWay}"
                                        Width="180" />
                                </StackPanel>
                                <TextBox
                                    Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="Enter step description"
                                    TextWrapping="Wrap" />
                                <TextBlock Text="Configure step settings above" FontStyle="Italic" Opacity="0.7" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Vertical" Spacing="4" VerticalAlignment="Top">
                                <Button Content="â¬†ï¸" FontSize="12" Padding="8" Command="{Binding DataContext.MoveStepUpCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" />
                                <Button Content="â¬‡ï¸" FontSize="12" Padding="8" Command="{Binding DataContext.MoveStepDownCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" />
                                <Button Content="ðŸ—‘ï¸" FontSize="12" Padding="8" Command="{Binding DataContext.RemoveStepCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </controls:RoutineStepTemplateSelector.DefaultTemplate>
        </controls:RoutineStepTemplateSelector>
    </Page.Resources>

    <Grid Padding="40" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button
                Content="â† Back"
                Click="OnBackClicked"
                Style="{StaticResource AccentButtonStyle}"
                Margin="0,0,20,0"
                VerticalAlignment="Center" />

            <StackPanel VerticalAlignment="Center">
                <TextBlock
                    Text="{Binding PageTitle}"
                    Style="{ThemeResource TitleTextBlockStyle}"
                    Margin="0,0,0,4" />
                <TextBlock
                    Text="{Binding PageSubtitle}"
                    Opacity="0.7"
                    FontSize="14" />
            </StackPanel>
        </StackPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollMode="Auto">
            <StackPanel Spacing="20">
                <!-- Properties Panel -->
                <Border CornerRadius="8" BorderThickness="1" Padding="20">
                    <Border.BorderBrush>
                        <SolidColorBrush Color="{ThemeResource CardStrokeColorDefault}" />
                    </Border.BorderBrush>
                    <StackPanel Spacing="16">
                        <TextBlock
                            Text="Routine Properties"
                            FontSize="18"
                            FontWeight="SemiBold" />

                        <!-- Name -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Name" FontWeight="SemiBold" />
                            <TextBox
                                Text="{Binding Routine.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="Enter routine name" />
                        </StackPanel>

                        <!-- Description -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Description" FontWeight="SemiBold" />
                            <TextBox
                                Text="{Binding Routine.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="Enter routine description"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                Height="80" />
                        </StackPanel>

                        <!-- Enabled Toggle -->
                        <StackPanel Spacing="8">
                            <ToggleSwitch
                                Header="Enabled"
                                IsOn="{Binding Routine.Enabled, Mode=TwoWay}"
                                OffContent="Disabled"
                                OnContent="Enabled" />
                            <TextBlock
                                Text="When enabled, this routine can be executed"
                                Opacity="0.7"
                                FontSize="12" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Steps Panel -->
                <Border CornerRadius="8" BorderThickness="1" Padding="20">
                    <Border.BorderBrush>
                        <SolidColorBrush Color="{ThemeResource CardStrokeColorDefault}" />
                    </Border.BorderBrush>

                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                            <TextBlock
                                Text="Routine Steps"
                                FontSize="18"
                                FontWeight="SemiBold"
                                VerticalAlignment="Center" />

                            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                                <Button
                                    Content="âž• Add Step"
                                    Click="OnAddStepClicked"
                                    Style="{StaticResource AccentButtonStyle}" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Steps List -->
                        <ListView
                            x:Name="StepsListView"
                            ItemsSource="{Binding Steps}"
                            ItemTemplateSelector="{StaticResource StepTemplateSelector}"
                            SelectionMode="None"
                            Margin="0,8,0,0">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>

                        <!-- Empty State -->
                        <StackPanel
                            x:Name="EmptyStatePanel"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="16"
                            Margin="0,40,0,40"
                            Visibility="{Binding Steps, Converter={StaticResource EmptyCollectionToVisibilityConverter}}">
                            <TextBlock
                                Text="No steps yet"
                                FontSize="18"
                                FontWeight="SemiBold"
                                HorizontalAlignment="Center" />
                            <TextBlock
                                Text="Add your first step to get started"
                                Opacity="0.7"
                                HorizontalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="2" CornerRadius="8" Padding="20" BorderThickness="1">
            <Border.BorderBrush>
                <SolidColorBrush Color="{ThemeResource CardStrokeColorDefault}" />
            </Border.BorderBrush>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                <Button
                    Content="Cancel"
                    Click="OnCancelClicked"
                    Style="{StaticResource DefaultButtonStyle}" />

                <Button
                    Content="Save Routine"
                    Click="OnSaveClicked"
                    Style="{StaticResource AccentButtonStyle}"
                    IsEnabled="{Binding CanSave}" />
            </StackPanel>
        </Border>

        <!-- Loading Overlay -->
        <Border
            x:Name="LoadingOverlay"
            Grid.RowSpan="3"
            Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
            Opacity="0.8"
            Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                <ProgressRing IsActive="True" Width="48" Height="48" />
                <TextBlock
                    Text="Loading..."
                    HorizontalAlignment="Center"
                    FontSize="16" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
